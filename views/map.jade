extends layout

// Page containing map
block content
  .mapTitle
    h1 Seismic map of Iceland
  
  #map
    script(src="../public/javascripts/map.js")
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDdOFizGF7LrYOyNztioh9k0sL3cODbd18&callback=initMap&libraries=geometry,visualization" async defer)
  
  .sliders
    p(class='slider-text') Determine the magnitude of displayed earthquakes
    #slider-size
    p(class='slider-text') Determine the time period of displayed earthquakes
    #slider-time
    
  form.form-inline
    .form-group
      .checkbox
        label(for='checkbox')
          input(type='checkbox')#markerCheckbox
          | Marker
      .checkbox
        label(for='checkbox')#circleCheckbox
          input(type='checkbox')
          | Circles
      .checkbox
        label(for='checkbox')
          input(type='checkbox')
          | Heatmap
  
  
